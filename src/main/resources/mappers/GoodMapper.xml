<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ht.project.snsproject.mapper.GoodMapper">

    <select id="getGood" parameterType="int" resultType="int">
        SELECT COUNT(*) FROM goods
        WHERE feedId = #{feedId}
    </select>

    <select id="getGoodList" parameterType="com.ht.project.snsproject.model.good.GoodListParam"
            resultType="com.ht.project.snsproject.model.good.GoodList">
        SELECT id, userId From goods
        WHERE feedId = #{feedId}
        <if test="cursor != null">
            AND id <![CDATA[<]]> #{cursor}
        </if>
        ORDER BY id DESC
        LIMIT #{limit};
    </select>

    <delete id="deleteGoodUser" parameterType="com.ht.project.snsproject.model.good.GoodUserDelete">
        DELETE FROM goods
        WHERE feedId = #{feedId} AND userId = #{userId}
    </delete>
</mapper>